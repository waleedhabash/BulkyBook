@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Categories List</h2>
            
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> &nbsp; New</a>
        </div>
    </div>



<table class="table table-bordered table-hover table-striped" style="width:100%" >
    <thead>
        <tr>
            <th scope="col">
                Category Name
            </th>
            <th scope="col">
                Display Order
            </th>
            <th scope="col">

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="30%" scope="row" >
                    @item.Name
                </td>
                <td width="40%" scope="row">
                    @item.DisplayOrder
                </td>
                <td width="60%" scope="row">
                   <div class="w-75 btn-group" role="group">
                            <a class="btn btn-info mx-2" asp-controller="Category" asp-action="Edit" asp-route-Id="@item.Id" ><i class="bi bi-pencil-square"></i> Edit</a>
                            <a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id"><i class="bi bi-trash"></i> Delete</a>

                   </div>

                </td>
            </tr>
        }
    </tbody>
</table>
</div>